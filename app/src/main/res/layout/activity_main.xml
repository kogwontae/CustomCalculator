<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_open"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:backgroundTint="#7B817B"
            android:text=">"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/btn_open"
            android:gravity="center_vertical|right"
            android:text="0"
            android:textColor="#666666"
            android:textSize="50sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/result_text"
            android:layout_marginBottom="10dp"
            android:background="#0B0A0A" />
        <Button
            android:id="@+id/allClear_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/line1"
            android:backgroundTint="#7B817B"
            android:text="AC"
            android:textSize="30sp"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/clearEntry_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/line1"
            android:layout_toRightOf="@+id/allClear_btn"
            android:backgroundTint="#7B817B"
            android:text="CE"
            android:textSize="30sp"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/backSpace_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="←"
            android:textSize="30sp"
            android:layout_below="@+id/line1"
            android:layout_toRightOf="@+id/clearEntry_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/division_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/backSpace_btn"
            android:layout_below="@+id/line1"
            />

        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number7_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="30sp"
            android:layout_below="@+id/allClear_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number8_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="30sp"
            android:layout_below="@+id/clearEntry_btn"
            android:layout_toRightOf="@id/number7_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number9_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="30sp"
            android:layout_toRightOf="@id/number8_btn"
            android:layout_below="@+id/backSpace_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/multiply_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="*"
            android:textSize="30sp"
            android:layout_below="@+id/division_btn"
            android:layout_toRightOf="@+id/number9_btn" />

        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number4_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="30sp"
            android:layout_below="@+id/number7_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number5_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="30sp"
            android:layout_below="@id/number8_btn"
            android:layout_toRightOf="@+id/number4_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number6_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="30sp"
            android:layout_toRightOf="@id/number5_btn"
            android:layout_below="@id/number9_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/minus_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="30sp"
            android:layout_below="@id/multiply_btn"
            android:layout_toRightOf="@id/number6_btn" />
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number1_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="30sp"
            android:layout_below="@id/number4_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number2_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="30sp"
            android:layout_below="@id/number5_btn"
            android:layout_toRightOf="@id/number1_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number3_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="30sp"
            android:layout_toRightOf="@id/number2_btn"
            android:layout_below="@id/number6_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/plus_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="30sp"
            android:layout_toRightOf="@id/number3_btn"
            android:layout_below="@+id/minus_btn" />

        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/number0_btn"
            android:layout_width="185dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="30sp"
            android:layout_below="@+id/number1_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#9BB5B5"
            android:id="@+id/point_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="30sp"
            android:layout_toRightOf="@id/number0_btn"
            android:layout_below="@id/number2_btn"
            android:layout_marginRight="5dp"/>
        <Button
            android:backgroundTint="#7B817B"
            android:id="@+id/equal_btn"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="30sp"
            android:layout_below="@id/number3_btn"
            android:layout_toRightOf="@id/point_btn" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0B0A0A"
            android:layout_below="@id/number0_btn"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
    <include layout="@layout/activity_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>